<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/rank"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:textAppearance="?android:attr/textAppearanceLarge"
    tools:text="999" />

  <ImageView
    android:id="@+id/empire_icon"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_centerVertical="true"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_toRightOf="@id/rank"
    android:layout_toEndOf="@id/rank"
    android:src="@drawable/app_icon" />

  <TextView
    android:id="@+id/empire_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@id/empire_icon"
    android:layout_toEndOf="@id/empire_icon"
    tools:text="Empire Name"
    android:textAppearance="?android:attr/textAppearanceMedium" />

  <TextView
    android:id="@+id/last_seen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/empire_name"
    android:layout_toRightOf="@id/empire_icon"
    android:layout_toEndOf="@id/empire_icon"
    tools:text="Last seen: 2 days ago"
    android:textAppearance="?android:attr/textAppearanceSmall" />

  <TextView
    android:id="@+id/total_population"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/last_seen"
    android:layout_toRightOf="@id/empire_icon"
    android:layout_toEndOf="@id/empire_icon"
    tools:text="Population: 123,456"
    android:textAppearance="?android:attr/textAppearanceSmall" />

  <ImageView
    android:id="@+id/alliance_icon"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_alignBottom="@id/total_population"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:src="@drawable/app_icon" />

  <TextView
    android:id="@+id/alliance_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@id/total_population"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_toLeftOf="@+id/alliance_icon"
    android:layout_toStartOf="@+id/alliance_icon"
    android:layout_toRightOf="@id/total_population"
    android:layout_toEndOf="@id/total_population"
    android:ellipsize="end"
    android:gravity="end"
    android:singleLine="true"
    tools:text="Alliance name"
    android:textAppearance="?android:attr/textAppearanceSmall" />

  <TextView
    android:id="@+id/total_stars"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/total_population"
    android:layout_toRightOf="@id/empire_icon"
    android:layout_toEndOf="@id/empire_icon"
    tools:text="Stars: 12"
    android:textAppearance="?android:attr/textAppearanceSmall" />

  <TextView
    android:id="@+id/total_colonies"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/total_stars"
    android:layout_toRightOf="@id/empire_icon"
    android:layout_toEndOf="@id/empire_icon"
    tools:text="Colonies: 23"
    android:textAppearance="?android:attr/textAppearanceSmall" />

  <TextView
    android:id="@+id/total_ships"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@id/total_stars"
    android:layout_marginLeft="20dp"
    android:layout_marginStart="20dp"
    android:layout_toRightOf="@id/total_colonies"
    android:layout_toEndOf="@id/total_colonies"
    tools:text="Ships: 12,345"
    android:textAppearance="?android:attr/textAppearanceSmall" />

  <TextView
    android:id="@+id/total_buildings"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@id/total_ships"
    android:layout_alignStart="@id/total_ships"
    android:layout_alignBottom="@id/total_colonies"
    tools:text="Buildings 145"
    android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>