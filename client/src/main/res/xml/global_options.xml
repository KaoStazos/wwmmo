<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="pref_key_graphics"
        android:title="Graphics">
        <ListPreference
            android:defaultValue="STARS_AND_GAS"
            android:key="GlobalOptions.StarfieldDetail"
            android:title="Starfield Detail" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="GlobalOptions.GenUniqueStarsAndPlanets"
            android:title="Unique Stars &amp; Planets" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="pref_key_game"
        android:title="Game settings">
        <DialogPreference />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="pref_key_conn"
        android:title="Connection">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="GlobalOptions.NonSecureServerConnection"
            android:title="Use non-secure server connection" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="pref_key_chat"
        android:title="Chat">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="GlobalOptions.AutoTranslateChatMessages"
            android:title="Auto-translate" />
        <ListPreference
            android:defaultValue="None"
            android:key="GlobalOptions.ChatProfanityFilterLevel"
            android:title="Profanity Filter" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="pref_key_crash_reports"
        android:title="Crash Reports">
        <ListPreference
            android:defaultValue="Ask"
            android:key="GlobalOptions.AutoSendCrashReports"
            android:title="Auto-send Crash Reports" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="pref_key_notifications"
        android:title="Notifications">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="GlobalOptions.EnableNotifications"
            android:title="Enable Notifications" />
        <PreferenceScreen
            android:dependency="GlobalOptions.EnableNotifications"
            android:key="GlobalOptions.Notifications[BUILDING_BUILD_COMPLETE]"
            android:title="Building constructed">
            <CheckBoxPreference
                android:defaultValue="true"
                android:key="GlobalOptions.Notifications[BUILDING_BUILD_COMPLETE].Enabled"
                android:title="Notification Enabled" />
            <RingtonePreference
                android:dependency="GlobalOptions.Notifications[BUILDING_BUILD_COMPLETE].Enabled"
                android:key="GlobalOptions.Notifications[BUILDING_BUILD_COMPLETE].Ringtone"
                android:ringtoneType="notification"
                android:showDefault="true"
                android:showSilent="true"
                android:title="Ringtone" />
            <ListPreference
                android:defaultValue="#FF0000"
                android:dependency="GlobalOptions.Notifications[BUILDING_BUILD_COMPLETE].Enabled"
                android:key="GlobalOptions.Notifications[BUILDING_BUILD_COMPLETE].LedColour"
                android:summary=""
                android:title="LED Color" />
        </PreferenceScreen>
        <PreferenceScreen
            android:dependency="GlobalOptions.EnableNotifications"
            android:key="GlobalOptions.Notifications[FLEET_BUILD_COMPLETE]"
            android:title="Fleet constructed">
            <CheckBoxPreference
                android:defaultValue="true"
                android:key="GlobalOptions.Notifications[FLEET_BUILD_COMPLETE].Enabled"
                android:title="Notification Enabled" />
            <RingtonePreference
                android:dependency="GlobalOptions.Notifications[FLEET_BUILD_COMPLETE].Enabled"
                android:key="GlobalOptions.Notifications[FLEET_BUILD_COMPLETE].Ringtone"
                android:ringtoneType="notification"
                android:showDefault="true"
                android:showSilent="true"
                android:title="Ringtone" />
            <ListPreference
                android:defaultValue="#FF0000"
                android:dependency="GlobalOptions.Notifications[FLEET_BUILD_COMPLETE].Enabled"
                android:key="GlobalOptions.Notifications[FLEET_BUILD_COMPLETE].LedColour"
                android:summary=""
                android:title="LED Color" />
        </PreferenceScreen>
        <PreferenceScreen
            android:dependency="GlobalOptions.EnableNotifications"
            android:key="GlobalOptions.Notifications[FLEET_MOVE_COMPLETE]"
            android:title="Fleet move complete">
